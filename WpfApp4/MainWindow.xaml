<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Фильтр статей блога" Height="400" Width="525">
    <Grid>
        <ComboBox x:Name="FilterComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10">
            <ComboBoxItem Content="Фильтр по дате" />
            <ComboBoxItem Content="Фильтр по ключевым словам" />
        </ComboBox>
        <TextBox x:Name="FilterInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="10,50,0,0" />
        <Button x:Name="FilterButton" Content="Фильтровать" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="10,100,0,0" Click="FilterButton_Click" />
        <Button x:Name="ResetButton" Content="Сбросить фильтр" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="10,140,0,0" Click="ResetButton_Click" />
        <ListBox x:Name="PostsListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="450" Height="200" Margin="10,180,0,0"/>
    </Grid>
</Window>
